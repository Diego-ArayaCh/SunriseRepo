@model IEnumerable<Infraestructure.Models.HISTORICO>

@{
    ViewBag.Title = "InformeEntrada";
}
<h1 class="display-6" id="estiloColor">
    Informe de Entradas
</h1>

<hr class="my-4">

<table style="display: block; overflow-x: auto " class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th width="180px">
                @Html.DisplayNameFor(model => model.fechaHora)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.USUARIO.cedula)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.MOVIMIENTO)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.HistDetalleEntradaSalida.ElementAt(0).IDSucursalEntra)
            </th>
            <th style="text-align:center">Ver Detalle</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr class="table-warning">

                <td colspan="4"><div class="text-center">No hay registros</div> </td>
            </tr>
        }
        else
        {

            foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.fechaHora)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.USUARIO.cedula)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.MOVIMIENTO.nombre)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.HistDetalleEntradaSalida.ElementAt(0).SUCURSAL.nombre)
                    </td>
                    <td style="width:20%; text-align:center" id="estiloColorHover">
                        @Html.ActionLink("Detalles", "Details", new { id = item.ID })
                    </td>
                </tr>
            }
        }
    </tbody>

</table>



@section footer{
    <footer class="footer mt-auto py-3 ">
        <hr />
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Sunrise Computers &reg;</p>
            <p>Si deseas conocer mas acerca de la página, favor visitar la página "Acerca de"</p>
        </div>
    </footer>
}
