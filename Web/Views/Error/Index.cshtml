


@{
    ViewBag.Title = "Error";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div style="padding: 40px 15px; text-align: center;">

                <h2 class="display-6" id="estiloColor">
                    @ViewBag.Title
                </h2>
                <hr class="my-4">
                <div>
                    <p  class="lead">
                        @ViewBag.Description
                    </p>
                </div>
                <div style="margin-top: 15px; margin-bottom: 15px;">
                    @Html.ActionLink("Regresar", (String)ViewBag.redirectAction, (String)ViewBag.redirect, null, new { @class = "btn btn-primary", @style = "margin-right:10px;" })
                </div>
            </div>
        </div>
    </div>
</div>
