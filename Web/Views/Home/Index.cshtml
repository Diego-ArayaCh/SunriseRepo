    ViewBag.Title = "Inicio";
}

<div class="jumbotron">
    <h2 class="display-6">Bienvenido a la aplicacion!</h2>
    <p class="lead">Cualquier cambio generado, afectara directamente los registros de la base de datos. ¡Favor tener cuidado!</p>
